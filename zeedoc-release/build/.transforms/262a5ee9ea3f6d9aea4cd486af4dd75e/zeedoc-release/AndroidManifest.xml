<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zee.zeedoc"
    android:versionCode="2"
    android:versionName="1.3"
    tools:overrideLibrary="com.app.progreswheelview,com.pipvideo.youtubepipvideoplayer" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application tools:overrideLibrary="com.app.progreswheelview" >
        <activity
            android:name="com.zee.zeedoc.Activity.MeetActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.zee.zeedoc.Activity.FileStructureActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.zee.zeedoc.videoplayer.YoutubePlayer"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.zee.zeedoc.pdfviewer.ZeePdfViewer"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <service
            android:name="com.zee.zeedoc.ui.music.music.PlayerService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="com.zee.zeedoc.Activity.audio.DetailActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.zee.zeedoc.videoplayer.ZeeExoPlayer"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.zee.zeedoc.PrefsActivity"
            android:label="@string/preferences" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>